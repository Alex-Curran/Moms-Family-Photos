@model PhotoStorage.ViewModels.DeletePhotoViewModel

@{
    ViewBag.Title = "Delete";
}

<h2 class="yellow-text">Delete</h2>

<h3 class="yellow-text">Are you sure you want to delete this?</h3>
<div class="yellow-text">
    <h4>Gallery</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
            @Html.DisplayFor(model=>model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Cancel", "ViewGallery","Gallery", new { id = Model.GalleryId },null)
        </div>
    }
</div>


